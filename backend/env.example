# Copy this file to .env and fill in your API keys

# API Keys
OPENAI_API_KEY=your_openai_key_here
# GEMINI_API_KEY=your_gemini_key_here  # Optional, OpenAI preferred if both present
PINECONE_API_KEY=your_pinecone_key_here
SERPER_API_KEY=your_serper_key_here
VAPI_API_KEY=your_vapi_secret_key_here

# Configuration
INGEST_INTERVAL_HOURS=24
AVEN_SUPPORT_URL=https://www.aven.com/support
PINECONE_INDEX_NAME=aven-support-index
EMBEDDING_MODEL=text-embedding-3-small  # Faster OpenAI model
CHUNK_SIZE=500  # Tokens per chunk
TOP_K=3  # Number of retrieved documents for RAG (reduced for speed)

# Backend URL for Vapi webhooks (update this for production)
# Required for Vapi Voice integration
# This must be a PUBLICLY ACCESSIBLE URL (use ngrok for local dev).
# Example: https://1a2b-3c4d-5e6f.ngrok.io
BACKEND_URL=http://localhost:8000 